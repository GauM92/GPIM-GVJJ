@model List<SeuProjeto.Models.Pessoa>

@{
    ViewBag.Title = "Consulta de Pessoas";
}

<h2>Consulta de Pessoas</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>CPF</th>
            <th>Endereço</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pessoa in Model)
        {
            <tr>
                <td>@pessoa.ID_pessoa</td>
                <td>@pessoa.nome</td>
                <td>@pessoa.CPF</td>
                <td>@pessoa.endereco</td>
                <td>
                    <a href="@Url.Action("Editar", "Pessoa", new { id = pessoa.ID_pessoa })">Editar</a> |
                    <a href="@Url.Action("Excluir", "Pessoa", new { id = pessoa.ID_pessoa })">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
